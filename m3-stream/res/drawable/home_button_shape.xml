<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
		<shape xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="rectangle">
            <gradient android:endColor="#faf850"
                android:startColor="#fcfcd3" android:angle="270" />
		    <stroke android:width="1dp" android:color="#37c4ff" />
		    <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />
		    <corners
		        android:bottomLeftRadius="1dip"
		        android:topRightRadius="1dip"
		        android:topLeftRadius="1dip"
		        android:bottomRightRadius="1dip" />
		</shape>
    </item>
    <item>
		<shape xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="rectangle">
            <gradient android:endColor="#369b00"
                android:startColor="#a9f680" android:angle="270" />
		    <stroke android:width="1dp" android:color="#37c4ff" />
		    <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />
		    <corners
		        android:bottomLeftRadius="1dip"
		        android:topRightRadius="1dip"
		        android:topLeftRadius="1dip"
		        android:bottomRightRadius="1dip" />
		</shape>
    </item>
</selector>
